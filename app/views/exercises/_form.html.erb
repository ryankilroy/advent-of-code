<%= form_with(model: exercise) do |form| %>
  <% if exercise.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
        <% exercise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :day, style: "display: block" %>
    <div id="day-picker"></div>
    <%= form.hidden_field :day, id: 'day' %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :path, style: "display: block" %>
    <%= form.text_field :path %>
  </div>

  <div>
    <%= form.label :completed, style: "display: block" %>
    <div id="star-completion" data-value="<%= @exercise.completed %>" data-readonly="false" data-field-id="completed"></div>
    <%= form.hidden_field :completed, id: 'completed' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
